@model TarefaModel
@{
    ViewData["Title"] = "Confirmação de apagar tarefa";
}

<div class="text-center">
    <h3>Realmente quer apagar a tarefa: @Model.NomeTarefa?</h3>
</div>


<a class="btn btn-primary w-100" role="button" asp-controller="Tarefa" asp-action="Index">Cancelar</a>
<a class="btn btn-danger w-100 mt-2" role="button" asp-controller="Tarefa" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>