@model List<Agenda.Models.TarefaModel>

@{
    ViewData["Title"] = "Pagina Inicial";
    DateTime dataSelecionada = ViewBag.DataSelecionada;
}

<style>
    .riscado {
        text-decoration: line-through;
        opacity: 0.6;
    }
</style>


<div class="container mt-4">

    <h2 class="mb-3">Tarefas de @dataSelecionada.ToString("dd/MM/yyyy")</h2>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row g-2">
            <div class="col-auto">
                <input type="date" name="data" class="form-control"
                       value="@dataSelecionada.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    Ver tarefas
                </button>
            </div>
        </div>
    </form>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            Nenhuma tarefa para este dia.
        </div>
    }
    else
    {
        <div class="list-group">

            @if (Model.All(t => t.Concluida))
            {
                <div class="alert alert-success mb-3">
                    Não há mais tarefas para hoje!
                </div>
            }

            @foreach (var t in Model)
            {
                <div class="list-group-item list-group-item-action">

                    <div class="d-flex justify-content-between align-items-center">

                        <div class="d-flex align-items-center">

                            <form asp-controller="Tarefa" asp-action="MarcarConcluida" method="post">
                                <input type="hidden" name="id" value="@t.Id" />

                                <input type="checkbox"
                                       name="concluida"
                                       value="true"
                                       class="form-check-input me-2"
                                       @(t.Concluida ? "checked" : "")
                                       onChange="this.form.submit()" />
                            </form>

                            <div class="ms-2">
                                <h5 class="mb-1 @(t.Concluida ? "riscado" : "")">@t.NomeTarefa</h5>
                                <small class="@(t.Concluida ? "riscado" : "")">@t.Observacao</small>
                            </div>

                        </div>

                    </div>

                </div>
            }

        </div>
    }

    <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
        <a class="btn btn-outline-primary" role="button" asp-controller="Tarefa" asp-action="Criar">Adicionar nova tarefa</a>
    </div>

    <div class="mt-4">
        <a asp-controller="Tarefa" asp-action="Index" class="btn btn-outline-secondary">
            Gerenciar todas as minhas tarefas
        </a>
    </div>
</div>
